<div id="job">
<h2><%= @job.title %></h2>
  <p> Type of work they do: <%= @job.category.name %></p>
  <p> Things about them: <%= @job.description %></p>
  <p> Areas they service </p>
  <% @job.service_areas.name %>
  <% if @job.comments != nil %>
    <p> Comments: </p>
      <% @job.comments.each do |c|%>
        <%= c.comment %>
        <%= c.rating %>
      <% end %>
    <% end %>
  <% if user_signed_in? %>
    <%= link_to "Create a new comment", new_job_comment_path(@job) %>
  <% end %>
</div>
